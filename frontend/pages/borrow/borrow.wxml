<!--pages/borrow/borrow.wxml-->
<!--pages/about/about.wxml-->
<view>
  <view id="look">
    <text class="tishi">借阅图书</text>
  </view>
  <form bindsubmit="submit">
    <view class="msginput" style="display: none;"> 
      <input id="input" name="userid"  value="{{userid}}"/>
    </view>
    <text class="tishi">图书编号</text>
    <view class="msginput">
      <input id="input" name="bookid" placeholder="请输入需要借阅的图书编号"/>
    </view>
    <text class="tishi">借阅时间（模拟）</text>
    <view class="msginput"> 
      <input id="input" name="borrowtime"   placeholder="请输入时间，例如2022年3月13日为20220313"/>
    </view>
    <button form-type="submit" id="btn">确定借阅</button>
  </form>




  <view id="result" class="rst1">
    <text class="tishi">结果：</text>
    <textarea name="" id="out" cols="30" rows="10" class="msginput">{{text}}</textarea>
  </view>
  <button id="bottom" bindtap="back">返回</button>
</view>


