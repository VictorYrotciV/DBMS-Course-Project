/* pages/searchuserinfo/searchuserinfo.wxss */
.userinfo {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    color: rgb(0, 0, 0);
    background-color: #ffffff;
    flex-wrap: wrap;
    padding: 15rpx;
    height: 320rpx;
  }
  .userinfo_text_area{
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    background-color: #ffffff;
    flex-wrap: wrap;
    
  }
  .userinfo_box{
    position: relative;
    padding-left: 20rpx;
    padding-right: 20rpx;
    width: 100%;
    box-sizing: border-box;
    z-index: 1;
   
  }
  .userinfo_nickname_box{
      width:400rpx;
      padding-top: 30rpx;
      
      padding-left: 160rpx;
      padding-right: 20rpx;
      align-items: flex-start;
      font-size: x-large;
      font-weight: 600;
  }
  .userinfo_id_box{
    
    padding-top: 20rpx;
    margin-bottom: 40rpx;
    padding-left: 120rpx;
    padding-right: 20rpx;
    align-items: center;
    font-size: large;
    color: darkslategrey;
  }